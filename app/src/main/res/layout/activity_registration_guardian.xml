<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5FF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/registration_top"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:textSize="30dp"
                android:textColor="#333333"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/registration_center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_guardian"
                android:text="Guardian Details"
                android:textSize="25dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_guardianname"
                android:text="Name"
                android:textSize="25dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@+id/tv_guardian"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_guardianname"
                android:singleLine="true"
                android:textSize="25dp"
                android:textColor="#959595"
                android:background="@drawable/bg_et"
                android:layout_below="@+id/tv_guardianname"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_guardiannumber1"
                android:text="Phone 1"
                android:textSize="25dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@+id/et_guardianname"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_guardiannumber1"
                android:singleLine="true"
                android:textSize="25dp"
                android:textColor="#959595"
                android:background="@drawable/bg_et"
                android:digits="0123456789"
                android:inputType="phone"
                android:maxLength="12"
                android:layout_below="@+id/tv_guardiannumber1"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_guardiannumber2"
                android:text="Phone 2"
                android:textSize="25dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@+id/et_guardiannumber1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_guardiannumber2"
                android:singleLine="true"
                android:textSize="25dp"
                android:textColor="#959595"
                android:background="@drawable/bg_et"
                android:digits="0123456789"
                android:inputType="phone"
                android:maxLength="12"
                android:layout_below="@+id/tv_guardiannumber2"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_guardianaddress"
                android:text="Address"
                android:textSize="25dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/et_guardiannumber2"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_guardianaddress"
                android:singleLine="true"
                android:textSize="25dp"
                android:textColor="#959595"
                android:background="@drawable/bg_et"
                android:layout_below="@+id/tv_guardianaddress"
                android:padding="15dp"
                android:layout_marginLeft="10dp"

                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/registration_bottom"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registration_finish"
                android:text="Register"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:background="@drawable/button_style"
                android:elevation="0dp"
                android:layout_centerInParent="true"
                android:padding="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>